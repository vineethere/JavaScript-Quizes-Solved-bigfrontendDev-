// https://bigfrontend.dev/quiz/Promise-prototype-finally
Promise.resolve(1)
.finally((data) => {
  console.log(data)
  return Promise.reject('error')
})
.catch((error) => {
  console.log(error)
  throw 'error2'
})
.finally((data) => {
  console.log(data)
  return Promise.resolve(2).then(console.log)
})
.then(console.log)
.catch(console.log)











// ðŸ§µ Step-by-Step Logs:
// finally â†’ logs undefined (it gets no value), then returns a rejected promise ('error')
// catch â†’ catches 'error', logs it, then throws 'error2'
// finally â†’ again logs undefined, calls .then(console.log) on 2, so logs 2
// Chain is still rejected with 'error2', so:
// then is skipped
// catch logs 'error2'


// this is returning 1 but why we sbho undefined in finally data?

